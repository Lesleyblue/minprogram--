/* pages/add/add.wxss */
page{
    background-color: #eee;
  }
.radio{
    background-color: #fff;
    margin-top: 5px;
    font-size: 12px;
    height: 50px;
    display: flex;
    align-items: center;
}
radio{
    width: 140rpx;
    border-radius: 5px;
    background-color: #fff;
    box-sizing: border-box;
    padding-left: 18rpx;
}
radio .wx-radio-input.wx-radio-input-checked{
    background-color: rgba(240, 187, 73, 0.863);
    border: none;
 }
.page{
    box-sizing: border-box;
    padding: 10px 10px;
}

.title{
    font-size: 12px;
    color: rgb(133, 127, 127);
    margin-top: 30px;
    margin-bottom: 5px;
}

.create-accustom{
    box-sizing: border-box;
    padding: 5px 5px;
    border-radius: 5px;
    width: 100%;
    height: 40px;
    background-color: white;
    display: flex;
    align-items: center;
}

.create-icon{
    width: 20px;
    height: 20px;
    margin-right: 10px;
}

.confirm{
    width: 60px;
    height: 30px;
    border-radius: 15px;
    background-color: rgba(240, 187, 73, 0.863);
    font-size: 12px;
    color: #fff;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 8px;
}
.content{
    box-sizing: border-box;
    width: 100%;
    height: 70px;
    background-color: white;
    margin-top: 1px;
    padding: 10px 10px;
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.icon{
    width: 50px;
    height: 50px;
    /* background-color: #eee; */
}
.accustom-des{
    padding: 5px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    width: 160px;
    height: 50px;
    margin-left: 5px;
}
.name{
    font-size: 14px;
}
.des{
    font-size: 12px;
    color: rgb(160, 158, 158);
    margin-top: 2px;
}
.btn{
    margin-left: 5px;
    width: 55px;
    height: 25px;
    border-radius: 15px;
    color: #3dcc3a;
    background-color: #eee;
    font-size: 13px;
    display: flex;
    align-items: center;
    justify-content: center;
}