/* pages/custom/custom.wxss */
page{
    background-color: #eee;
}
.clock{
    background-color: #fff;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    height: 200px;
}
.clock-icon{
    width: 100px;
    height: 100px;
}
.record{
    margin-top: 20px;
    width: 70px;
    height: 25px;
    border-radius: 15px;
    color: #fff;
    background-color: rgba(240, 187, 73, 0.863);
    font-size: 11px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 15px;
}
.sta{
    width: 100%;
    height: 50px;
    margin-top: 20px;
    background-color: #fff;
    display: flex;
    align-items: center;
}
.sta-icon{
    width: 50px;
    height: 50px;
    padding: 10px 10px;
    box-sizing: border-box;
}
.word{
    margin-left: 2px;
    font-size: 12px;
    color: rgb(104, 100, 100);
}
.insist-days{
    font-size: 11px;
    color: rgb(134, 129, 129);
    margin-left: 40px;
}