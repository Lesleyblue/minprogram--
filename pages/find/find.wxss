/* pages/find/find.wxss */
page{
    background-color: #eee;
}
.body{
    box-sizing: border-box;
    padding: 8px 8px;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
}
.imgs{
    box-sizing: border-box;
    background: #fff;
    width: 100%;
    height: 100px;
    border-radius: 10px;
    overflow: hidden;
}
.u-wrp-bnr {
    width: 100%;
    height: 100px;
    display: block;
    position: relative;
  }
.u-img-slide {
    width: 100%;
    height: inherit;
}
.concern{
    box-sizing: border-box;
    background: #fff;
    width: 100%;
    height: 125px;
    margin-top: 5px;
    display: flex;
    flex-direction: column;
    border-radius: 5px;

}
.look{
    box-sizing: border-box;
    background: #fff;
    width: 100%;
    height: 230px;
    margin-top: 5px;
    display: flex;
    flex-direction: column;
    border-radius: 5px;
}
.add-accustom{
    box-sizing: border-box;
    height: 30px;
    width: 25%;
    border-radius: 20px;
    font-size: 12px;
    position: fixed;
    bottom: 10px;
    left: 37%;
    background-color: #51c54f;
    color: #fff;
    display: flex;
    justify-content: center;
    align-items: center;
    transition: 3s;
  }
.one{
    padding: 0 3px;
    box-sizing: border-box;
    width: 100%;
    height: 35px;
    display: flex;
    justify-content: space-between;
}
.two{
    padding: 0 3px;
    box-sizing: border-box;
    width: 100%;
    height: 100%;
    display: flex;
}
.concern-user{
    box-sizing: border-box;
    width: 20%;
    height: 100%;
    padding: 1px 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;

}
.user-icon{
    width: 40px;
    height: 40px;
    border-radius: 40px;
    /* border: 1px solid black; */
}
.user-nickname{
    font-size: 11px;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
   -webkit-line-clamp: 1;
   -webkit-box-orient: vertical;
    word-break: break-all;
    margin-top: 8px;
    color: rgb(170, 170, 150);
}
.name{
    margin-left: 10px;
    font-size: 24px;
}
.detail{
    font-size: 12px;
    display: flex;
    justify-content: center;
    align-items: center;
    color: #51c54f;
    margin-right: 10px;
} 
.bottom-box{
    display: flex;
    justify-content: center;
    align-items: center;
}
.invite-friend{
    margin-top: 15px;
    margin-bottom: 20px;
    box-sizing: border-box;
    height: 30px;
    width: 30%;
    border-radius: 20px;
    font-size: 12px;
    background-color: #51c54f;
    color: #fff;
}
.content{
    box-sizing: border-box;
    padding: 5px 5px;
    width: 100%;
    height: 60px;
    /* border-bottom: 1px solid rgb(192, 181, 181); */
    display: flex;
    align-items: center;
    justify-content: space-around;

}
.content-icon{
    width: 30px;
    height: 30px;
    margin-left: 5px;
}
.content-mid{
    width:65%;
    height: 100%;
    margin-left: 10px;
    display: flex;
    flex-direction: column;
    justify-content: center;
}
.content-name{
    font-size: 14px;
    margin-bottom: 4px;
}
.nums{
    font-size: 12px;
    color: rgb(170, 170, 150);
}
.entry{
    width: 50px;
    height: 30px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 12px;
    color: #51c54f;
    background-color: #eee;
    border-radius: 15px;
}
button::after{
    border:none;
}
