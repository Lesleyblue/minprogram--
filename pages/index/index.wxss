/**index.wxss**/
page{
  background-color: #eee;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
.accustom{
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  box-sizing: border-box;
  padding: 1% 2%;
}
.box{
  box-sizing: border-box;
  display: flex;
  padding: 10px 10px;
  width: 100%;
  height: 70px;
  background-color: #fff;
  border-radius: 5px;
  margin-top: 5px;
  position: relative;
}
.icon-box{
  width: 50px;
  height: 50px;
  padding: 5px 5px;
  box-sizing: border-box;
  /* background-color: #aaa; */
}
.name-box{
  width: 75%;
  padding: 2px 2px;
  margin-left: 8px;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.name{
  font-size: 14px;
}
.record{
  color: rgb(150, 149, 149);
  font-size: 12px;
}
.lock{
  font-size: 10px;
}
.is-finsh{
  position: absolute;
  font-size: 40px;
  color: #51c54f;
  right: 5px;
  top: 8px;
  width: 50px;
  height: 50px;
  padding: 10px 10px;
  box-sizing: border-box;
}
.add-accustom{
  box-sizing: border-box;
  height: 30px;
  width: 25%;
  border-radius: 20px;
  font-size: 12px;
  position: fixed;
  bottom: 10px;
  left: 37%;
  background-color: #51c54f;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}