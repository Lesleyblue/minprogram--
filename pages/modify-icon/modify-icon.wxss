/* pages/modify-icon/modify-icon.wxss */
page{
    background-color: #eee;
}
.page{
    padding: 20rpx 20rpx;
}
.custom{
    box-sizing: border-box;
    width: 100%;
    height: 140rpx;
    background-color: white;
    margin-top: 1px;
    padding: 10px 10px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    border-radius: 5px;
}
.custom-icon{
    box-sizing: border-box;
    padding: 5px 5px;
    width: 50px;
    height: 50px;
}
.custom-des{
    padding: 5px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    width: 180px;
    height: 50px;
    margin-left: 5px;
}
.name{
    font-size: 14px;
}
.des{
    font-size: 12px;
    color: rgb(160, 158, 158);
    margin-top: 2px;
}
.btn-certain{
    margin-left: 5px;
    width: 50px;
    height: 30px;
    border-radius: 5px;
    color: #fff;
    background-color: #e9b715e7;
    font-size: 13px;
    display: flex;
    align-items: center;
    justify-content: center;
}
.icons{
    width: 100%;
    height: 100%;
    margin-top: 10px;
    background-color: #fff;
    padding-left: 20rpx;
    display: flex;
    flex-wrap: wrap
}
.icon-life{
   box-sizing: border-box;
   padding: 8px 8px;
   width: 48px;
   height: 48px;
}
.btns{
    display: flex;
    margin-top: 5px;
    background-color: #fff;
    /* padding: 10px 10px; */
    box-sizing: border-box;
    height: 90rpx;
    align-items: center;
}
.btn{
    display: flex;
    justify-content: center;
    align-items: center;
    width: 120rpx;
    height: 60rpx;
    background-color: #eee;
    margin-right: 20rpx;
    font-size: 12px;
    color: rgb(92, 89, 89);
    border-radius: 40rpx;
}
.study{
    background-color: #51c54f;
    color: #fff;
}