/* pages/my-page/my-page.wxss */
page{
    background-color: #eee;
}
.my-msg{
    display: flex;
    justify-self: center;
    align-items: center;
    flex-direction: column;
    background-color: #fff;
}
.my-icon{
    margin-top: 20px;
    width: 60px;
    height: 60px;
    border-radius: 60px;
}
.nickname{
    font-size: 13px;
    margin-top: 20px;
}
.des{
    margin-top: 5px;
    font-size: 11px;
    color: rgb(146, 138, 138);
    margin-bottom: 20px;
}
.box{
    display: flex;
    background-color: #fff;
    margin-top: 1px;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    height: 40px;
}
.num{
    width: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 13px;
}
.my-custom{
    box-sizing: border-box;
    margin-top: 5px;
    display: flex;
    font-size: 12px;
    padding: 5px 15px;
    align-items: center;
    height: 40px;
    background-color: #fff;
}
.custom-list{
    height: 230px;
    background-color: #fff;
    display: flex;
    justify-content: center;
    align-items: center;
}
.custom{
    height: 150px;
    width: 100px;
    border-style: solid;
    box-shadow:0px 2px 4px 2px #DDDDDD;
    border-width: 0rpx;
    display: flex;
    padding: 14px 14px;
    flex-direction: column;
    box-sizing: border-box;
    position: relative;
    border-radius: 5px;
}
.inner{
    /* width: 102px; */
    height: 115px;
    background-color: rgb(225, 249, 250);
    display: flex;
    align-items: center;
    justify-content: center;

}
.custom-icon{
    width: 25px;
    height: 25px;
}
.custom-name{
    margin-top: 5px;
    font-size: 10px;
    color: rgb(102, 97, 97);
}
.days{
    font-size: 10px;
    color: rgb(85, 207, 85);
    margin-top: 10px;
}
.delete{
    position: absolute;
    width: 15px;
    height: 15px;
    right: 10px;
    border-radius: 3px;
    background-color: #fff;
}
.active{
    height: 200px;
    width: 130px;
}
.aftericon{
    height: 40px;
    width: 40px;
}
.aftername{
    margin-top: 8px;
    font-size: 12px;
    color: rgb(102, 97, 97);
}
.afterdays{
    font-size: 12px;
    color: rgb(85, 207, 85);
    margin-top: 15px;
}
.afterd{
    position: absolute;
    width: 20px;
    height: 20px;
    right: 8px;
    border-radius: 5px;
    background-color: #fff;
}


