/* pages/person/person.wxss */
page{
    background-color:#eee;
}
.person-msg{
    box-sizing: border-box;
    width:100%;
    height: 130px;
    background-color: white;
    display: flex;
    padding: 10px 13px ;
    justify-content: space-between;
}
.icon{
    margin-top: 25px;
    box-sizing: border-box;
    background-color: rgb(228, 159, 228);
    width: 50px;
    height: 50px;
    border-radius:50px;
}
.msg{
    padding: 0px 20px;
    margin-left: 20px;
    box-sizing: border-box;
    width: 80%;
    height: 100%;
    /* border: 1px solid #000; */
    display: flex;
    justify-content: center;
    flex-direction: column;
    padding: 1px 5px;
}
.nickname{
    font-size: 14px; 
}
.sign{
    font-size: 10px;
    color: rgb(141, 126, 126);
    margin-top: 5px;
}
.energy{
    font-size: 14px;
    width: 50px;
    height: 20px;
    border-radius: 30px;
    background-color:#eee;
    display: flex;
    justify-content: center;
    align-items: center;
    color: #41d33e;
    margin-top: 5px;
}
.energy-icon{
    width: 15px;
    height: 15px;
}
.select{
    box-sizing: border-box;
    margin-top: 8px;
    display: flex;
    flex-direction: column;
    background-color: white;
}
.nag{
    box-sizing: border-box;
    border-bottom: 1px solid #eee;
    width: 100%;
    height: 45px;
    display: flex;
    align-items: center;
    position: relative;
    padding: 5px 10px;
}
.select-icon{
    width: 24px;
    height: 24px;
}
.word{
    font-size: 13px;
    margin-left: 10px;
}
.go-to{
    position: absolute;
    right: 10px;
    font-size: 20px;
    color: #eee;
    width: 20px;
    height: 20px;
}
button{
    background-color: #fff;
}
button::after{
    border:none;
}
