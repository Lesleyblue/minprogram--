/* pages/search/search.wxss */
page{
    background-color: #eee;
  }
.page{
    box-sizing: border-box;
    padding: 10px 10px;
}
.search-bar{
    border-radius: 3px;
    width: 100%;
    height: 40px;
    background-color: white;
    padding: 5px 10px;
    box-sizing: border-box;
    display: flex;
    align-items: center;
}
input{
    margin-left: 10px;
}
.title{
    font-size: 12px;
    color: rgb(133, 127, 127);
    margin-top: 30px;
}
.recommend-list{
    margin-top: 5px;
    box-sizing: border-box;
}
.recommend{
    box-sizing: border-box;
    width: 100%;
    height: 70px;
    background-color: white;
    margin-top: 2px;
    padding: 10px 10px;
    display: flex;
    align-items: center;
}
.user-icon{
    box-sizing: border-box;
    width: 50px;
    height: 50px;
    border-radius: 50px;
}
.user-des{
    padding: 5px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    width: 150px;
    height: 50px;
    margin-left: 5px;
}
.nickname{
    font-size: 14px;
}
.des{
    font-size: 12px;
    color: rgb(160, 158, 158);
    margin-top: 2px;
}
.btn{
    margin-left: 5px;
    width: 65px;
    height: 25px;
    border-radius: 15px;
    background-color: rgb(247, 192, 91);
    font-size: 14px;
    color: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
}