/* pages/shequ/shequ.wxss */
page{
    background-color: #eee;
}
.title{
    color: rgb(128, 123, 123);
    width: 100%;
    height: 32px;
    background-color: white;
    box-sizing: border-box;
    border-bottom: 1px solid #eee;
    font-size: 14px;
    display: flex;
    align-items: center;
}
.context{
    padding: 10px 10px;
    box-sizing: border-box;
    background-color: white;
    margin-bottom: 5px;

}
.person-msg{
    width: 100%;
    height: 80px;
    background-color: white;
    display: flex;
    align-items: center;
    box-sizing: border-box;
    position: relative;
}
.my-icon{
    width: 50px;
    height: 50px;
    border-radius: 50px;
    /* background-color: thistle; */
}
.my-msg{
    margin-left: 10px;

}
.my-name{
    font-size: 14px;

}
.my-accustom{
    font-size: 12px;
    color: #51c54f;
    margin-top: 3px;
}
.date{
    position: absolute;
    right: 20px;
}
.create-at{
    font-size: 12px;
    color: rgba(182, 172, 172, 0.589);
}
.insist-days{
    font-size: 13px;
    margin-top: 3px;
   color: rgb(30, 199, 185);
   display: flex;
   justify-content: center;
   align-items: center;
}
.day-icon{
    width: 22px;
    height: 22px;
}
.content{
    background-color: rgb(247, 242, 242);
    box-sizing: border-box;
    padding: 2px 10px;
    font-size: 12px;
}
.points{
    background-color: white;
    width: 100%;
    height: 30px;
    display: flex;
    flex-direction: row-reverse;
    box-sizing: border-box;
    padding-right: 10px;
    padding-top: 8px;
    align-items: center;
}
.point-num{
    color: rgb(209, 191, 191);
    font-size: 12px;
}