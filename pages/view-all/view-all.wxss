/* pages/view-all/view-all.wxss */
page{
    background-color: #eee;
  }
.page{
    box-sizing: border-box;
    padding: 10px 10px;
}
.search-bar{
    border-radius: 3px;
    width: 100%;
    height: 40px;
    background-color: white;
}
.title{
    font-size: 12px;
    color: rgb(133, 127, 127);
    margin-top: 30px;
}
.list{
    margin-top: 5px;
}
.content{
    box-sizing: border-box;
    width: 100%;
    height: 70px;
    background-color: white;
    margin-top: 1px;
    padding: 10px 10px;
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.icon{
    width: 50px;
    height: 50px;
}
.accustom-des{
    padding: 5px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    width: 180px;
    height: 50px;
    margin-left: 5px;
}
.name{
    font-size: 14px;
}
.des{
    font-size: 12px;
    color: rgb(160, 158, 158);
    margin-top: 2px;
}
.btn{
    margin-left: 5px;
    width: 50px;
    height: 30px;
    border-radius: 15px;
    color: #3dcc3a;
    background-color: #eee;
    font-size: 13px;
    display: flex;
    align-items: center;
    justify-content: center;
}